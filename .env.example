# ================================
# 갯벌 탄소예금 환경 변수
# ================================

# ================================
# Backend (Python FastAPI)
# ================================

# App Configuration
DEBUG=true
DEMO_MODE=true

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production-please-use-long-random-string

# Google Sheets Database
# 1. Google Cloud Console에서 Service Account 생성
# 2. JSON 키 다운로드
# 3. JSON 내용을 한 줄로 변환하여 아래에 입력
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}
GOOGLE_SHEET_ID=your-google-sheet-id

# Claude API (Anthropic)
# https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-your-claude-api-key
CLAUDE_MODEL=claude-haiku-4.5-20250925

# Naver Cloud Platform APIs
# https://www.ncloud.com/
# Maps API (for Geocoding in admin features)
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# ================================
# Frontend (Next.js)
# ================================

# API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Naver Maps API
# https://www.ncloud.com/product/applicationService/maps
NEXT_PUBLIC_NAVER_MAP_CLIENT_ID=your-naver-map-client-id

# Demo Mode
NEXT_PUBLIC_DEMO_MODE=true
